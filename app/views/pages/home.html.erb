  <div id="carouselExampleControls" class="carousel slide" data-ride="carousel">
    <div class="carousel-inner">
      <div class="carousel-item active">
        <div class= "d-flex">
        <!-- 3 card foodtruck -->
        <% @foodtrucks.last(3).each do |foodtruck| %>
        <%= link_to food_truck_path(foodtruck) do %>

          <div class="card-food-truck">
            <% if foodtruck.photo.attached? %>
              <%= cl_image_tag foodtruck.photo.key, width: 300, height: 300, crop: :fill %>
            <% end %>
              <div class="card-food-truck-infos">
                <div>
                  <h3><%=foodtruck.name%></h3>
                  <p><%= foodtruck.city %></p>
                  <p><%= foodtruck.category %></p>
                </div>
                <div class="card-food-truck-infos-price">
                  <p id=currency>€</p>
                  <h2><%= foodtruck.price_per_day %></h2>
                  <p id=day>  PER DAY</p>
                </div>
              </div>
          </div>

          <% end %>
        <% end %>
        </div>
      </div>
​
