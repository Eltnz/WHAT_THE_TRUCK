
<div class="banner">
  <div class="container">
    <h1>What the truck</h1>
    <p>Great wheels on tire! </p>
    <p><%= link_to "FIND THE FOODTRUCK OF YOUR DREAMS", "#", class: "btn-yellow-slide" %></p>
  </div>
</div>

<div id="carouselExampleControls" class="carousel slide" data-ride="carousel">
  <div class="carousel-inner">
    <div class="carousel-item active d-flex align-items-center">
      <!-- 3 card foodtruck -->
      <% @foodtrucks.first(3).each do |ft| %>
        <div class="card-food-truck">
          <img src="https://images.unsplash.com/photo-1573918780733-c6cc6d4d5b31?ixlib=rb-1.2.1&ixid=eyJhcHBfaWQiOjEyMDd9&auto=format&fit=crop&w=668&q=80.jpg" />
            <div class="card-food-truck-infos">
              <div>
                <p><%= ft.city %></p>
                <h3><%= ft.name %></h3>
                <p><%= ft.category %></p>
              </div>
              <div class="card-food-truck-infos-price">
                <p id=currency>€</p>
                <h2><%= ft.price_per_day %></h2>
                <p id=day>  PER DAY</p>
              </div>
            </div>
        </div>
      <% end %>
    </div>

    <div class="carousel-item">
      <div class="card-food-truck">
        <img src="https://images.unsplash.com/photo-1573918780733-c6cc6d4d5b31?ixlib=rb-1.2.1&ixid=eyJhcHBfaWQiOjEyMDd9&auto=format&fit=crop&w=668&q=80.jpg" />
        <div class="card-food-truck-infos">
          <div>
            <p>CITY</p>
            <h3>Name of the truck</h3>
            <p>Category</p>
          </div>
          <div class="card-food-truck-infos-price">
            <p id=currency>€</p>
            <h2>price</h2>
            <p id=day>  PER DAY</p>
          </div>
        </div>
      </div>
    </div>
    <div class="carousel-item">
      <div class="card-food-truck">
        <img src="https://images.unsplash.com/photo-1573918780733-c6cc6d4d5b31?ixlib=rb-1.2.1&ixid=eyJhcHBfaWQiOjEyMDd9&auto=format&fit=crop&w=668&q=80.jpg" />
        <div class="card-food-truck-infos">
          <div>
            <p>CITY</p>
            <h3>Name of the truck</h3>
            <p>Category</p>
          </div>
          <div class="card-food-truck-infos-price">
            <p id=currency>€</p>
            <h2>price</h2>
            <p id=day>  PER DAY</p>
          </div>
        </div>
      </div>
    </div>

  </div>
  <a class="carousel-control-prev" href="#carouselExampleControls" role="button" data-slide="prev">
    <span class="carousel-control-prev-icon" aria-hidden="true"></span>
    <span class="sr-only">Previous</span>
  </a>
  <a class="carousel-control-next" href="#carouselExampleControls" role="button" data-slide="next">
    <span class="carousel-control-next-icon" aria-hidden="true"></span>
    <span class="sr-only">Next</span>
  </a>
</div>













