      <%= form_tag(ft_search_path, method: 'get') do %>
      <div class="field p-3 d-flex justify-content-around align-items-center">
        <%= 'City:' %><%= text_field_tag 'city' %>
        <%= 'Category:' %><%= text_field_tag 'category' %>
        <%= 'Start date:' %><%= date_field_tag 'start_date' %>
        <%= 'End date:' %><%= date_field_tag 'end_date' %>
      </div>
