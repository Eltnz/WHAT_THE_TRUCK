      <% foodtruck.bookings.each do |booking| %>
       <% if foodtruck.photo.attached? %>
        <%= cl_image_tag foodtruck.photo.key, width: 300, height: 300, crop: :fill %>
        <% end %>
        <h3><%= foodtruck.name%></h3>
        <p> Du <%= booking.start_date.day %>/<%= booking.start_date.month %>/<%= booking.start_date.year %> au <%= booking.end_date.day %>/<%= booking.end_date.month%>/<%= booking.end_date.year %></p>
