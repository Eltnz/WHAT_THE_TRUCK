<h1>Add a Food Truck</h1>
<div class="container">
  <div class="row">
    <div class="col-xs-12 col-sm-10 col-sm-offset-1">
      <h2>Create your Food Truck</h2>
      <%= simple_form_for @foodtruck do |f| %>
      <%= f.input :name %>
      <%= f.input :category %>
      <%= f.input :menu %>
      <%= f.input :availability %>
      <%= f.input :city %>
      <%= f.input :price_per_day %>
      <%= f.submit class: 'btn btn-primary' %>
      <% end %>
    </div>
  </div>
</div>
