

  <div class="text-center" style="font-weight: bolder;">
    <h1 style="margin-top: 35px;">Your selection of Foodtrucks</h1>
  </div>
  <br>
  <br>

    <div class="d-flex justify-content-between">


      <div class="row justify-content-start ">
        <% @foodtrucks.each do |foodtruck| %>
              <!-- cards -->
              <div class="col-4 my-4 text-center" id=linktextnone>
                <%= link_to food_truck_path(foodtruck, start_date: params[:start_date], end_date: params[:end_date]) do %>
                    <!-- photos of cards -->
                    <div class="card-food-truck" id=simage>
                      <% if foodtruck.photo.attached? %>
                        <%= cl_image_tag foodtruck.photo.key, width: 300, height: 300, crop: :fill %>
                      <% end %>
                            <!-- infos of cards -->
                            <div class="card-food-truck-infos" style="height: 160px;">

                                <div class="justify-content">
                                          <h3><%= foodtruck.name.capitalize %></h3>
                                        </div>

                                      <div class="d-flex justify-content-between align-items-center">


                                        <div >
                                          <ul class="pl-0" style="box-sizing: content-box;">
                                            <li id="star" class="list-inline-item fas fa-star"></li>
                                            <li id="star" class="list-inline-item fas fa-star"></li>
                                            <li id="star" class="list-inline-item fas fa-star"></li>
                                            <li id="star" class="list-inline-item fas fa-star"></li>
                                            <li id="star" class="list-inline-item far fa-star"></li>
                                            <br>

                                          </ul>
                                        </div>
                                          <p id=foodtruck-category><%=foodtruck.category %></p>

                                  </div>






                                        <div class="d-flex align-items-center text-center">
                                          <i id="localisation" class="fas fa-map-marker-alt fa-2x" style="margin-bottom: 16px; font-size: 1.5em;"></i>
                                          <p><%= foodtruck.address %></p>
                                        </div>

                                        <br>

                                        <div class="d-flex justify-content-between px-2">
                                          <div class="card-food-truck-infos-price" style="position: relative; right: -120px; bottom: 25px;">
                                            <p id=currency>â‚¬</p>
                                            <h2 id=h2change><%= foodtruck.price_per_day %></h2>
                                            <p id="day-show" style="color: gray">PER DAY</p>
                                          </div>
                                        </div>




                            </div>

                      </div>
                    <% end %>

              </div>
        <% end %>
      </div>



      <div class="container d-flex justify-content-center position-relative">
        <div id="map"
             style=" width: 380px; height: 100vh; "
             data-markers="<%= @markers.to_json %>"
             data-mapbox-api-key="<%= ENV['MAPBOX_API_KEY'] %>">
        </div>
      </div>
  </div>


  <%= link_to "return to foodtruck selection", root_path, class: "btn-black" %>

