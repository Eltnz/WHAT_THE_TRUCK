  <div id="carouselExampleControls" class="carousel slide" data-ride="carousel">
    <div class="carousel-inner">
      <div class="carousel-item active">
        <div class= "d-flex">
        <!-- 3 card foodtruck -->
        <% @foodtrucks.first(3).each do |foodtruck| %>
        <%= link_to food_truck_path(foodtruck) do %>

          <div class="card-food-truck" >

              <%= image_tag "https://images.unsplash.com/photo-1573918780733-c6cc6d4d5b31?ixlib=rb-1.2.1&ixid=eyJhcHBfaWQiOjEyMDd9&auto=format&fit=crop&w=668&q=80.jpg" %>


              <div class="card-food-truck-infos">
                <div>
                  <p><%= foodtruck.city %></p>
                  <h3><%=foodtruck.name%></h3>
                  <p><%= foodtruck.category %></p>
                </div>
                <div class="card-food-truck-infos-price">
                  <p id=currency>€</p>
                  <h2><%= foodtruck.price_per_day %></h2>
                  <p id=day>  PER DAY</p>
                </div>
              </div>
          </div>

          <% end %>
        <% end %>
        </div>
      </div>
​
      <div class="carousel-item">
        <div class="d-flex">
          <% @foodtrucks.last(3).each do |foodtruck| %>
          <%= link_to food_truck_path(foodtruck) do %>
            <div class="card-food-truck">
